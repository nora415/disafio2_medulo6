<p style="color: green"><%= notice %></p>

<% content_for :title, "Comments" %>

<h1>Comentario</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Mostrar este comentario", comment, class:"btn btn-dark  my-3" %>
    </p>
  <% end %>
</div>

<%= link_to "Nuevo comentario", new_comment_path, class:"btn btn-dark" %>
